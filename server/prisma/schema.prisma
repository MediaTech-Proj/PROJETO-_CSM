generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  role       String       @default("user")
  createdAt  DateTime     @default(now())
  favorites  Favorite[]   // relação com filmes favoritos
}

model Movie {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  genre       String?
  rating      Float?       // média ou nota
  duration    String?
  posterUrl   String?
  categoryId  Int?
  category    Category?    @relation(fields: [categoryId], references: [id])
  favorites   Favorite[]   // relação reversa (users que favoritaram)
  createdAt   DateTime     @default(now())
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  movies  Movie[]
}

model Favorite {
  id      Int    @id @default(autoincrement())
  userId  Int
  movieId Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie   Movie  @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId]) // evita duplicar favoritos
}
